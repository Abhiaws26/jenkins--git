pipeline {
    agent any  // Use any available agent or node

    stages {
        stage('Greeting') {
            steps {
                echo 'Hello, Jenkins!'
            }
        }

        stage('List Files') {
            steps {
                sh 'ls -l'
            }
        }

        stage('Done') {
            steps {
                echo 'Pipeline completed!'
            }
        }
    }
}

