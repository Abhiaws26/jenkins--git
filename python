pipeline {
    agent {
        docker { image 'python:3.10' }
    }
    
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install requests'
            }
        }

        stage('Run Script') {
            steps {
                sh 'echo "print(\\"Hello from inside Docker\\")" > hello.py'
                sh 'python hello.py'
            }
        }
    }
}
                
